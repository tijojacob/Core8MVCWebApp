@model List<Core8MVC.Models.Models.Company>

<div class="card shadow border-0" style=" margin-bottom: 60px !important">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">            
            <div class="col-12 text-end">
                <a asp-controller="Company" asp-action="UpsertCompany" class="btn btn-primary">
                    <i class="bi bi-file-earmark-plus-fill"></i>  Create New Company
                </a>
            </div>
        </div>
        <table id="myCompanyTable" class="table table-bordered table-striped" style="width : 100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Street Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Postal Code
                    </th>
                    <th>
                        Phone Number
                    </th>
                   <th>
                        Actions
                   </th>
                </tr>
            </thead>
            
        </table>
    </div>
 </div>

 @section Scripts{
     <script src="~/js/company.js"></script>
 }


