@model int

<div class"container row pt-4">
    <div class="col-12 text-center">
        <h1 class"text-primary text-center">Order Placed Successfullt!</h1>
        Your Order Number is : @Model <br /><br />
        <img src=@Url.Content("~/images/product/lawn_leaf.jpg") style="max-height:75%; max-width:75%" />
    </div>
    <div class="col-12 text-center" style="color: maroon">
        <br />
        Your payment has been applied successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>
    </div>
</div>